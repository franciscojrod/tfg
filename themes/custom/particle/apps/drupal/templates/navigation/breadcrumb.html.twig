{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  {% import '@macros/bootstrap.twig' as bootstrap %}

  {% set breadcrumb %}
    {% include "@atoms/breadcrumb/_breadcrumb.twig" %}
  {% endset %}

  {{ bootstrap.strap('container', 'row', 'col-12', breadcrumb) }}
{% endif %}