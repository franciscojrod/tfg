{% embed '@molecules/card/_card.twig' with {
  card_button_text: content.field_link_1[0]['#title'],
  card_button_link: content.field_link_1[0]['#url']|render,
  card_title: content.name,
  card_text: content.field_body|field_value,
} %}

  {% block card_image %}
    {{ content.field_image|field_value }}
  {% endblock %}

{% endembed %}